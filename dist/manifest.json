{
    "name": "KK slack log helper",
    "version": "1.0.0",
    "description": "KK slack log helper",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "*://*.slack.com/*"
    ],
    "icons": {
        "16": "images/extension-icon.png",
        "48": "images/extension-icon.png",
        "128": "images/extension-icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [{
        "resources": ["setting.json"],
        "matches": ["<all_urls>"]
    }],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/extension-icon.png"
    },
    "options_page": "options.html",
    "manifest_version": 3
}
